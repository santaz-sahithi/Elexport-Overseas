import React, { useState } from 'react';
import './navbar.css';
import freshLogo from "../../assests/LogoElexport.jpeg"; // Update the path as per your logo's location

const FreshNavbar = () => {
    // State to manage mobile menu toggle
    const [menuOpen, setMenuOpen] = useState(false);

    // State to manage dropdown toggle
    const [dropdownOpen, setDropdownOpen] = useState(false);

    // Function to toggle the mobile menu
    const handleMenuToggle = () => {
        setMenuOpen(!menuOpen);
    };

    // Function to toggle dropdown menu
    const handleDropdownToggle = () => {
        setDropdownOpen(!dropdownOpen);
    };

    return (
        <header className="fresh-header">
            {/* Logo Section */}
            <div className="fresh-logo">
                <img src={freshLogo} alt="fresh logo" />
            </div>

            {/* Navigation Menu */}
            // <nav className="fresh-nav">
                <div className={menuOpen ? 'fresh-menu fresh-show-menu' : 'fresh-menu'}>
                    <a href="/Home">Home</a>
                    {/* Countries Dropdown */}
                    <a href="/Countries" className="fresh-dropdown">
                        <a  className="dropdown-link">Countries</a>
                        <a className="fresh-dropdown-content">
                            <a href="/UK">United Kingdom</a>
                            <a href="/Canada">Canada</a>
                            <a href="/Latvia">Latvia</a>
                            <a href="/Lithuania">Lithuania</a>
                            <a href="/France">France</a>
                            <a href="/Sweden">Sweden</a>
                            <a href="/Finland">Finland</a>
                            <a href="/Germany">Germany</a>
                        </a>
                    </a>


                    <a href="/Services">Services</a>
                    <a href="/AboutUs">About Us</a>
                    <a href="/ContactUs">Contact Us</a>
                </div>
                {/* Mobile Menu Toggle Button */}
                <div className="fresh-menu-toggle" onClick={handleMenuToggle}>
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </nav>
        </header>
    );
};

export default FreshNavbar;



/* Navbar styles */
.fresh-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #333;
  padding: 10px 20px;
  overflow: hidden;
}

.fresh-logo img {
  width: 120px;
  height: auto;
}

/* Main navigation styling */
.fresh-nav {
  display: flex;
  /* align-items: center; */
}

.fresh-menu {
  display: flex;
  /* gap: 30px; */
}

.fresh-menu a{
  color: white;
  text-decoration: none;
  padding: 8px 25px 8px 25px;
  transition: background-color 0.3s ease;
}

.fresh-menu a:hover{
  background-color: #555;
  border-radius: 5px;
}

/* Dropdown container */
.fresh-dropdown {
  position: absolute;
  display: inline-block;
}

/* Link to trigger dropdown */
.dropdown-link {
  /* position: relative; */
  color: white;
  text-decoration: none;
  padding: 8px 12px;
  transition: background-color 0.3s ease;
}

/* The actual dropdown menu (hidden by default) */
.fresh-dropdown-content {
  position: relative;
  display: none;
  background-color: #333;
  min-width: 160px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  z-index: 5;
  border-radius: 5px;
}

/* Dropdown menu links */
.fresh-dropdown-content a {
  color: white;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  font-size: 16px;
  text-align: center;

}

/* Hover effect on dropdown links */
.fresh-dropdown-content a:hover {
  background-color: #555;
  border-radius: 5px;
}

/* Show the dropdown menu when hovering over the fresh-dropdown */
.fresh-dropdown:hover .fresh-dropdown-content {
  display: block;
}

/* Optionally, add hover effect for the main Countries link */
.fresh-dropdown:hover .dropdown-link {
  background-color: #555;
  border-radius: 5px;
}


/* Mobile menu toggle button */
.fresh-menu-toggle {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  height: 24px;
  cursor: pointer;
}

.fresh-menu-toggle span {
  display: block;
  width: 30px;
  height: 3px;
  background-color: white;
}

/* Responsive styling for mobile screens */
@media (max-width: 768px) {
  .fresh-nav {
      position: relative;
  }

  .fresh-menu {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 100%;
      right: 0;
      background-color: #333;
      width: 100%;
      padding: 20px 0;
  }

  .fresh-menu a {
      padding: 12px 20px;
      border-bottom: 1px solid #555;
  }

  .fresh-menu a:last-child {
      border-bottom: none;
  }

  /* Show menu when menuOpen state is active */
  .fresh-show-menu {
      display: flex;
  }

  .fresh-menu-toggle {
      display: flex;
  }

  /* Dropdown adjustment for mobile */
  .fresh-dropdown-content {
      position: relative;
      top: 0;
      left: 0;
      width: 100%;
  }
}
